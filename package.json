  "bin": {
    "amoeba": "bin/amoeba"
  },
  "devDependencies": {
    "@bigmogician/publisher": "^1.0.12",
    "@types/node": "^10.16.0",
    "copy": "^0.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
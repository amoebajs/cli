{
  "name": "@amoebajs/cli",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/amoebajs/cli.git",
  "author": "bigmogician <bigmogician@outlook.com>",
  "license": "AGPL-3.0-only",
  "scripts": {
    "watch": "tsnd --respawn src/index.ts",
    "run": "ts-node src/index.ts",
